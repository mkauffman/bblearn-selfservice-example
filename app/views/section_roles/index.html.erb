<div class="contnt">
 <div id="content">
  <h2>Add or Remove <%=params[:enrollment].capitalize%></h2>
  <h3> Click on a course below to add or remove <%=params[:enrollment]%>.</h3>
  <p>Click header to sort.</p>
    <table id="add_guest_table" class="output clickable sortable">
        <thead>
            <tr>
                <th id="term">
                    Course Name
                 </th>                
            </tr>
        </thead>
        <tbody>
       <% @sections.each do |s| %>
       <% link_url = url_for(
          :controller    => "section_roles",
          :action        => 'edit',
          :id            => s.pk1,
          :enrollment    => params[:enrollment])%>
           <tr>              
             <td onClick="window.location='<%= link_url %>'">
                 <%= s.course_name %>
             </td>
	   </tr>
        <% end %>
	</tbody>
	</table>
  </div>
</div>

