<div class="contnt">
  <h1>Add or Remove <%=params[:enrollment].capitalize%></h1>
  <h2> Click on a course below to add or remove <%=params[:enrollment]%>.</h2>
  <p>Click header to sort.</p>
    <table id="add_guest_table" class="output clickable sortable">
        <thead>
            <tr>
                <th id="term">
                    Course Name
                  </th>                
            </tr>
        </thead>
        <tbody>
       <% @section_roles.each do |s| %>
       <% link_url = url_for(
        :controller => "section_role",
        :action => 'edit',
        :id => s.section.pk1,
        :enrollment => params[:enrollment])%>
        <tr>              
                <td onClick="window.location='<%= link_url %>'">
                    <%= s.section.course_name %>
                </td>
			</tr>
        <% end %>
		</tbody>
	</table>
</div>

