<div id="intro">
  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>
  <% if flash[:error] %>
    <p class="error"><%= flash[:error] %></p>
  <% end %>
	<% unless @html.nil? or @html.empty? %>
		<%= @html %>
	<% else %>
		<b>This is the Blackboard Learn Self-Service tool.</b>
		<br/>
		Please choose a task on the left.
	<% end %>
</div>
 