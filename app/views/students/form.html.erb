<div class="contnt">
    <% form_tag({:action => "add"}) do -%>
	<b>Enter a user's Portal ID to add them as a student.</b><br/>
	<span style="font-weight:bold; font-size:x-large;"><%= "Section: "+@section.short_name %></span><br/>
    <%= text_field_tag "portal_id" %>
	<%= hidden_field_tag "source_id", params[:source_id] %>
    <%= submit_tag "Add" %>
	<%= submit_tag "Cancel" %>
	<% end -%>
	<b>Or upload a CSV file with a list of students to add.</b>
	<% form_tag({:action => "add"}, :multipart => true, :method => "post") do %>
		<%= hidden_field_tag "source_id", params[:source_id] %>
		<%= label_tag 'student_list', 'Student List CSV:' %>
		<%= file_field_tag 'student_list' %>
		<%= submit_tag 'Submit' %>
		<%= submit_tag 'Cancel' %>
	<% end %>
	<div id="guest_table">
	<hr/>
    <b>Remove Students</b>
	<% form_tag(:action => "remove") do -%>
	<%= hidden_field_tag "source_id", params[:source_id] %>
    <table class="output sortable">
        <thead>
            <tr>
            	<th id="check_th" class="sorttable_nosort">
            		<%= check_box_tag('check_all', 'check_all', false, :onClick =>
                "$$('input.check').each(function(box){
      box.checked=(box.checked==false)?true:false});") %>
	  			</th>
                <th id="full_name">
                    Name
                </th>
				<th id="user_id">
					Portal ID
				</th>
                <th id="email">
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            <% for person in @students %>
            <tr>
            	<td class="check_box">
                    <%= check_box_tag 'rm_student[]', person.webct_id, false, :class => "check" %>
                </td>
                <td>
                    <%= person.first_name + " " + person.last_name %>
                </td>
                <td>
                    <%= person.webct_id %>
                </td>
                <td>
                    <%= person.email %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
	<%= submit_tag "Remove" %>
	<%= submit_tag "Cancel" %>
	<% end -%>
</div>

</div>
